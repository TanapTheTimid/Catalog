<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="160dp">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view_cat"
        cardview:cardCornerRadius="0dp"
        cardview:cardElevation="2dp"
        cardview:cardUseCompatPadding="true"
        android:layout_gravity="center|center"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/name_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:textSize="30sp"
                android:layout_marginStart="32dp"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="32dp"
                android:text="Android Studio"/>

            <TextView
                android:id="@+id/desc_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:textSize="12sp"
                android:layout_marginTop="8dp"
                android:layout_marginStart="36dp"
                android:layout_marginLeft="36dp"
                android:text="Spoils programmers all day long."
                android:layout_below="@id/name_text"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="72dp"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:id="@+id/quick_action"
            android:background="#35000000">

            <ImageButton
                android:background="#00000000"
                android:layout_width="72dp"
                android:layout_height="80dp"
                android:src="@drawable/camera_icon"
                android:id="@+id/photo_to_cat_btn" />

            <ImageButton
                android:background="#00000000"
                android:layout_width="72dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_left_more"
                android:layout_marginTop="80dp"
                android:id="@+id/cat_btn_more"/>

            <ImageButton
                android:background="#00000000"
                android:layout_width="72dp"
                android:layout_height="80dp"
                android:src="@drawable/gallery_icon"
                android:layout_marginStart="72dp"
                android:layout_marginLeft="72dp"
                android:id="@+id/photo_from_gal_btn"/>
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>